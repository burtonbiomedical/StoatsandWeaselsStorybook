<h1>Stories</h1>
<div class="row">
  {{#each stories}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          {{#if user}}
          <!-- Use triple curly brackets because this function is going to return HTML and we want to parse that HTML
          ../user.id refers to the gloval var user, exiting the scope of the loop -->
            {{{editIcon user.id ../user.id id}}}
          {{/if}}
        </div>
        <div class="card-content center-align">
          <h5>{{title}}</h5>
          <!-- If you want to use more than one helper function, you have to put the second function in parentheses.
          Remember that helper functions do not have their arguments passed in parentheses but instead they are seperated by a space -->
          <p class="story-text">{{stripTags (truncate body 150)}}</p>
          <br>
          <div class="chip">
            <img src="{{user.image}}" alt="google-image">
            <a href="/stories/user/{{user.id}}">{{user.firstName}} {{user.lastName}}</a>
          </div>
        </div>
        <div class="card-action center-align">
          <a href='/stories/show/{{id}}' class="btn grey">
            Read More <i class="fa fa-book"></i>
          </a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No stories found</p>
  {{/each}}
</div>