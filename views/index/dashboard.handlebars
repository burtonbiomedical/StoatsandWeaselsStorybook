<h1>Welcome {{user.firstName}}</h1>
<h4>Your Stories</h4>
{{#if stories}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td><a href="/stories/show/{{id}}">{{title}}</a></td>
          <td>{{formatDate date 'MMM Do YYYY'}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          <td>
            <a class='btn left-align' href="/stories/edit/{{id}}">Edit <i class="fa fa-pencil"></i></a>
            <form action="/stories/{{id}}?_method=DELETE" id="delete-form" method="post">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class='btn red'>Delete <i class="fa fa-trash"></i></button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have not submitted any stories yet</p>
{{/if}}